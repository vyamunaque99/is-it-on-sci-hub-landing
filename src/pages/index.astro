---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';

const chromeWebStoreLink = 'https://github.com/onwidget/astrowind';

const metadata = {
  title: 'Is it on Sci-Hub? - The tool for your research',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Download',
        href: chromeWebStoreLink,
        target: '_blank',
        icon: 'tabler:download',
      },
    ]}
    image={{ src: '~/assets/images/extension-demo-ieeexplore.png', alt: 'IEEExplore Demo' }}
  >
    <Fragment slot="title"> Download any paper from any database </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Is it on Sci-Hub?</span> is a Chrome extension that performs a DOI-based search to enable
        a download button on the research database of your choice.</span
      >
    </Fragment>
  </Hero>

  <Features
    id="features"
    tagline="Features"
    title="What 'Is it on Sci-Hub?' can do"
    subtitle="The tool you need for your research"
    items={[
      {
        title: 'Ready-to-use extension',
        description:
          'Access any paper with no config needed, just download it.',
        icon: 'tabler:book',
      },
      {
        title: 'Multible Compatibility',
        description:
          'Search any paper in the research Database of your preference (Scopus, IEEExplore).',
        icon: 'tabler:components',
      },
      {
        title: 'Continous improvement',
        description:
          'We are constantly working to add new Databases and improve performance.',
        icon: 'tabler:chevrons-right',
      },
      {
        title: 'Free Download',
        description:
          'Is it on Sci-Hub has a price of 0$. So, what are you waiting for?',
        icon: 'tabler:free-rights',
      },
    ]}
  />

</Layout>
