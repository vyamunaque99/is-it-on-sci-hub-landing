---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Unlock Premium Features"
    subtitle="Choose the perfect plan to boost your research."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our prices"
    subtitle="Only pay for extra features"
    prices={[
      {
        title: 'community',
        subtitle: 'Optimal choice for personal use',
        price: '0',
        period: 'per month',
        items: [
          {
            description: 'Most popular databases supported (IEEExplore,Scopus)',
          },
          {
            description: 'Free Download',
          },
          {
            description: 'Regular support answer time (24 h)',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Download',
          href: '#',
        },
      },
      {
        title: 'premium',
        subtitle: 'Optimal choice for small teams',
        price: 2,
        period: 'Per Month',
        items: [
          {
            description: 'All features from Community Edition',
          },
          {
            description: 'Adittional databases supported (WebOfScience,PubMed)',
          },
          {
            description: 'Fast support answer time (1 h)',
          },
          {
            description: 'Features on demand',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Download',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
    ]}
  />

</Layout>
